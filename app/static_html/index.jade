extends templates/default

block env
  - var title = 'Dashboard'
  - var icon = 'fa fa-dashboard'

block css
  link(rel="stylesheet", href="//cdnjs.cloudflare.com/ajax/libs/chosen/1.0/chosen.css")
  link(rel="stylesheet", href="//cdnjs.cloudflare.com/ajax/libs/noUiSlider/4.3.0/jquery.nouislider.min.css")

block content
  div.row
    div.col-lg-12
      div(class="panel-group",id="exchangerPanel")
        div(class="panel panel-default")
          div(class="panel-heading clearfix")
            div(class="icons")
            div(class="panel-title") Exchangers
            div(class="toolbar")
              ul.nav
                li#messages
                li#refreshAction.action
                  a(title="Actualizar")
                    i(class="fa fa-refresh")
                li.action
                  a(id="configAction",title="Configuracion")
                    i(class="fa fa-gear")
                li
                  a(class="accordion-toggle minimize-box",
                  data-toggle="collapse",
                  data-parent="#exchangerPanel",
                  href="#collapsibleExchanger")
                    i(class="fa fa-chevron-up")
          div(id="collapsibleExchanger", class="panel-collapse collapse in")
            div.panel-body
              div.form-horizontal
                div(class="input-group",id="exchangers-box")
                div(class="stats",id="exchangers-stats")
                  table(class="table", id="exchangers-table", style="display:none")
                    thead
                      tr
                        th(width="15%") #
                        th(width="20%") Exchanger
                        th(width="15%") Precio
                        th(width="15%") Compra
                        th(width="15%") Venta
                        th(width="15%") Actualizaci칩n
                    tbody
                  div(id="exchangers-empty", class="jumbotron" , style="display:none")
                    img(src="images/leprechaun.png")
                    h1
                      | Bienvenido a CoinSpider!
  div(class="modal fade config", id="configModal", tabindex="-1", role="dialog", aria-labelledby="myModalLabel", aria-hidden="true")
    div.modal-dialog
      div.modal-content
        div.modal-header
          button(type="button",class="close", data-dismiss="modal", aria-hidden="true") &times;
          h4(class="modal-title", id="myModalLabel") Configuraci칩n
        div.modal-body
          div.property#refreshTimer
            div.message
              | Actualizar cada
              span#refreshTimerStatus 0
              | segundos
            div.value
              div.slider#refreshTimer_Slider
          div.property#alertUp
            div.message
              | Alertar si sube m치s de
              span#alertUpStatus 0
              | &#37;
            div.value
              div.slider#alertUp_Slider
          div.property#alertDown
            div.message
              | Alertar si baja m치s de
              span#alertDownStatus 0
              | &#37;&nbsp;&nbsp;
            div.value
              div.slider#alertDown_Slider
          div.property#messageCounter
            div.message
              | Activar contador regresivo
            div.value
              div.onoffswitch
                input(type="checkbox", name="msgCounterSwitch", class="onoffswitch-checkbox", id="messageCounterSwitch", checked)
                label(class="onoffswitch-label", for="messageCounterSwitch")
                  div.onoffswitch-inner
                  div.onoffswitch-switch
          div.property#log
            div.message
              | Activar logs &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            div.value
              div.onoffswitch
                input(type="checkbox", name="logsSwitch", class="onoffswitch-checkbox", id="logSwitch")
                label(class="onoffswitch-label", for="logSwitch")
                  div.onoffswitch-inner
                  div.onoffswitch-switch